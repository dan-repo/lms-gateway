@model List<CourseModel>

<div>
    @foreach (CourseModel course in Model)
    {
        <div class="card">
            <div class="card-body">

                <div class="d-flex flex-column flex-sm-row">
                    <a href="@course.URL" target="_blank" class="avatar avatar-lg avatar-4by3 mb-3 w-xs-plus-down-100 mr-sm-3">
                        <img src="@course.Image" alt="Card image cap" class="avatar-img rounded">
                    </a>
                    <div class="flex" style="min-width: 200px;">
                        <h4 class="card-title mb-1"><a href="@course.URL" target="_blank">@course.Name</a></h4>
                        <p class="text-black-70">@course.Description</p>
                        <div class="d-flex align-items-end">
                            <div class="d-flex flex flex-column mr-3">
                                <div class="d-flex align-items-center py-1 border-bottom">
                                    <small class="text-black-70 mr-2">Price: @course.Cost</small>
                                    @*<small class="text-black-50">34 SALES</small>*@
                                </div>
                                <div class="d-flex align-items-center py-1">
                                    @*<small class="text-muted mr-2">GULP</small>*@
                                    <small class="text-muted">Level: @course.Level</small>
                                </div>
                            </div>
                            <div class="text-center">

                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" value="" id="invalidCheck01">
                                        <label class="custom-control-label" for="invalidCheck01">
                                            @*Pick*@
                                        </label>
                                    </div>
                                </div>



                                @*<input type="checkbox" />*@

                                @*<a asp-action="PaymentInfo" asp-controller="Paystack" asp-area="" target="_blank" class="btn btn-sm btn-success">Pay</a>*@
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            @*<div class="card__options dropdown right-0 pr-2">
                    <a href="#" class="dropdown-toggle text-muted" data-caret="false" data-toggle="dropdown">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="fixed-instructor-course-edit.html">Edit course</a>
                        <a class="dropdown-item" href="#">Course Insights</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-danger" href="#">Delete course</a>
                    </div>
                </div>*@
        </div>


    }

</div>