@model UserModel

<form id="frmSignup" class="form" method="post" asp-action="SignupForm" asp-controller="Account" asp-antiforgery="true">
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="form-group">
        <input asp-for="Name" placeholder="Enter your name" />
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <input asp-for="Email"  placeholder="Enter valid email" />
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <select class="form-control" asp-for="Type" asp-items="Model.Types" style="border-top:none; border-left:none; border-right:none; border-radius:0; margin-left:0;padding-left:0;"></select>
        <div><span asp-validation-for="Type" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <input asp-for="Password" placeholder="Choose a password" />
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" placeholder="Re-enter your password" />
        <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
    </div>
    <div>
        <input asp-for="IAgree">
        <label asp-for="IAgree">
            I agree to the
            <a href="#" class="text-black-70" style="text-decoration: underline;">Terms of Use</a>
        </label>
        <div><span asp-validation-for="IAgree" class="text-danger"></span></div>

        @*<label>
            I agree to the
            <a href="#" class="text-black-70" style="text-decoration: underline;">Terms of Use 444</a>
        </label>*@
        
    </div>
    <div class="form-group button">
        <button id="btnSubmit" type="button" class="btn">
            <span id="spSubmit">Register Now</span>
            <span id="isBusy" style="display:none;"><i class="fa fa-refresh fa-spin" ></i> &nbsp;Register Now</span>

            @*<span id="isBusy" style="display:none"><img src="~/images/bx_loader.gif" alt="" style="max-height:20px">&nbsp;Submitting ...</span>*@
        </button>
    </div>
   
</form>